<div class="form">
  <% unless @user.errors.none? %>
    <% @user.errors.full_messages.each do |msg| %> 
    <%= msg %>
    <% end %>
  <% end %>
<ul>
  <%= form_for @user do |f| %>
    <%= f.label :username %></br>
    <%= f.text_field :username, :class => 'field' %></br>
    <%= f.label :email %></br>
    <%= f.email_field :email, :class => 'field' %></br>
    <%= f.label :password %></br>
    <%= f.password_field :password, :class => 'field' %></br>
    <%= f.label :password_confirmation %></br>
    <%= f.password_field :password_confirmation, :class => 'field' %></br>
      <div class="radio">
      <label>
         <%= "I want to be an exchange buddy" %> 

         <input type="radio" class="input_radio" name= "role" value= <%= @user.role = "vendor" %>>

      </label>
     </div>
     <!-- f.collection_select :role, User::ROLES, :to_s, :humanize %> -->
    <%= f.submit 'Save', :class => 'new_user'%>

  <% end %>
</ul>  
</div>

