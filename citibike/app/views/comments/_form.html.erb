<ul>
  <%= form_for(:comment, :url => comments_path(commentable.class.to_s.underscore, commentable.id)) do |f| %>
  <%= f.label :title %></br>
  <%= f.text_field :title, :class => 'field' %></br>
  <%= f.label :comment %></br>
  <%= f.text_field :comment, :class => 'field' %></br>
  <%= f.submit 'Submit' %>
  <% end %>
</ul>