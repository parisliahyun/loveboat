<div class="well">
  <h4></h4>
  <ul>
    <li>Station: <%= @exchange.station %></li>
    <li>Date: <%= @exchange.transform_date %></li>
    <li>Time: <%= @exchange.time %></li>
    <li>Price: $<%= @exchange.price %>0</li>
    <% if @exchange.is_bike == true %>
    <li>Need a Bike</li>
    <% else %>
    <li>Need a Dock</li>
    <% end %>
    <% if @exchange.vendor_id == nil and current_user.id == @exchange.requester_id %>
    <li><%= link_to "Delete", exchange_path(@exchange), :method => :delete %> </li>
    <% end %>
    <!-- need cancel button -->
    
    <% if @exchange.requester_id == nil %> 
    <%= button_to "confirm", confirm_exchange_path, :id => @exchange.id, :method => :put %>

    <% end %> 

    <% if @exchange.requester_id != current_user.id && @exchange.requester_id != nil %> 
    <%= button_to "claim", claim_exchange_path, :id => @exchange.id, :method => :put %>
      <% end %> 

  </ul>
</div>